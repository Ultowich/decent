{
  "name": "@decent/client",
  "version": "0.0.0",
  "description": "Standalone web client for Decent",
  "main": "index.js",
  "repository": "https://github.com/decent-chat/decent/tree/master/packages/client",
  "keywords": [
    "chat",
    "chat-system",
    "social",
    "decent"
  ],
  "author": "Multiple contributors",
  "license": "GPL-3.0",
  "dependencies": {
    "decent.js": "^0.1.0-preview",
    "mrk.js": "^2.0.0",
    "preact": "^8.2.7",
    "preact-context-provider": "^1.1.1",
    "preact-markup": "^1.6.0",
    "preact-portal": "^1.1.2"
  },
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-do-expressions": "^6.22.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.3.0",
    "babelify": "^8.0.0",
    "browserify": "^15.1.0",
    "concurrently": "^3.5.1",
    "cssnano": "^4.0.0-rc.2",
    "postcss-cli": "^5.0.0",
    "postcss-import": "^11.1.0",
    "postcss-nesting": "^4.2.1",
    "stringify": "^5.2.0",
    "watchify": "^3.9.0"
  },
  "browserslist": "last 1 year",
  "scripts": {
    "build:css": "postcss css/app.css -o dist/bundle.css --verbose",
    "watch:css": "postcss css/app.css -o dist/bundle.css --verbose --watch",
    "build:js": "browserify --debug js/app.js -t [ stringify --extensions [.svg] ] -t babelify -o dist/bundle.js",
    "watch:js": "watchify --debug js/app.js -t [ stringify --extensions [.svg] ] -t babelify -o dist/bundle.js --verbose",
    "build": "npm run build:css && npm run build:js",
    "watch": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
    "prepublishOnly": "npm run build"
  }
}
